int substrings(string n) {
    const long long MOD=1000000007;
    int len = n.length();
    vector<long long> s(len,0);
    s[0]=n[0] - '0';
    for(int i=1;i<len;i++)
    {
        int digit=n[i]-'0';
        s[i]=(10*s[i-1]+(i+1)*digit)%MOD;
    }
    long long result = 0;
    for(int i=0;i<len;i++)
    {
        result=(result+s[i])%MOD;
    } 
    return result;
}
